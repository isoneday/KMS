            <!-- patTemplate:gtfwrendermodule module="comp.paging" submodule="paging" action="view" name="paging_bottom"  / -->
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function(){
        $('.confirm_delete').on('click', function(event){
            var elm = $(this);
            var href = elm.attr('href')+'&ascomponent=1';
            var name = elm.data('name');
            gtConfirm("<!-- patTemplate:gtfwgetlang key="msg_confirm_delete" / -->" + ' <!-- patTemplate:gtfwgetlang key="master_type" / -->?<br/><strong>'+name+'</strong>',"<!-- patTemplate:gtfwgetlang key="title_confirm_delete" / -->" + ' <!-- patTemplate:gtfwgetlang key="master_type" / -->',function(status){
                if (status) {
                    replaceContentWithUrl('subcontent-element', href);
                } else {
                    return false;
                }
            });
            return false;
        })
    });


    var popupType;
    $('.popup_type').click(function(){
        var url = $(this).attr('href')+'&ascomponent=1';
        var title = $(this).attr('title');
    
        popupType = showGtPopup(url, title, null, null, null, true);
        return false;
    });
                                        
</script>
<!-- /patTemplate:tmpl -->