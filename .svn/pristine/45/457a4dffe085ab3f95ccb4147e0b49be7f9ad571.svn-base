<!-- patTemplate:tmpl name="content" -->
<!-- patTemplate:tmpl name="message" type="simplecondition" requiredvars="CONTENT" -->
<div class="{STYLE}"><a class="close" data-dismiss="alert" href="#">&times;</a>{CONTENT}</div>
<!-- /patTemplate:tmpl -->
<form id="form_input" class="xhr dest_subcontent-element" method="post" action="{URL}">
	<div class="content-box-form" style="height:270px">
		<input type="hidden" name="id" value="{ID}" />
		<table class="table-edit-popup">	
			<tr>
				<th style="width:150px;"><!-- patTemplate:gtfwgetlang key="name"/ --></th>
				<td>
					<input type="text" name="name" value="{NAME}" size="50" title="<!-- patTemplate:gtfwgetlang key="name"/ -->" tabindex="1" />            
				</td>
			</tr>
			<tr>
				<th style="width:150px;"><!-- patTemplate:gtfwgetlang key="value"/ --></th>
				<td>
					<input type="text" name="value" value="{VALUE}" size="50" title="<!-- patTemplate:gtfwgetlang key="value"/ -->" tabindex="2" />            
				</td>
			</tr>
			<tr>
				<th style="width:150px;"><!-- patTemplate:gtfwgetlang key="description"/ --></th>
				<td>
					<textarea name="desc" cols="50" rows="2" title="<!-- patTemplate:gtfwgetlang key="description"/ -->" tabindex="3">{DESC}</textarea>            
				</td>
			</tr>
		</table>
	</div>
	<div class="modal-footer">
		<button type="submit" class="btn btn-primary" title="<!-- patTemplate:gtfwgetlang key="save"/ -->" tabindex="4"><!-- patTemplate:gtfwgetlang key="save" / --></button>
		<button type="reset" class="btn" title="<!-- patTemplate:gtfwgetlang key="reset"/ -->" tabindex="5"><!-- patTemplate:gtfwgetlang key="reset" / --></button>
	</div>
</form>
<!-- /patTemplate:tmpl -->