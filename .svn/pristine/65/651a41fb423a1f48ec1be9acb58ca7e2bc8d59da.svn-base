<!-- patTemplate:tmpl name="content" -->
<!-- patTemplate:gtfwrendermodule module="comp.breadcrump" submodule="breadcrump" action="view" name="breadcrump" / -->
<!-- patTemplate:tmpl name="search" -->

<form id="form_search" class="xhr dest_subcontent-element dataquest" method="post" action="{URL}">
<table class="table-search">
<tbody>
    <tr>
        <th style="width:20%;"><!-- patTemplate:gtfwgetlang key="name"/ --></th>
        <td><input type="text" name="name" value="{NAME}" size="50" title="<!-- patTemplate:gtfwgetlang key="name"/ -->" tabindex="1" /></td>        
    </tr>
    <tr>
        <th style="width:20%;"><!-- patTemplate:gtfwgetlang key="value"/ --></th>
        <td><input type="text" name="value" value="{VALUE}" size="50" title="<!-- patTemplate:gtfwgetlang key="value"/ -->" tabindex="2" /></td>        
    </tr>
    <tr>
        <th style="width:20%;">&nbsp;</th>
        <td>
            <button class="btn" title="<!-- patTemplate:gtfwgetlang key="search"/ -->" tabindex="3"><!-- patTemplate:gtfwgetlang key="search"/ --></button>
        </td>
    </tr>
</tbody>
</table>
</form>
<!-- /patTemplate:tmpl -->
<!-- patTemplate:tmpl name="message" type="simplecondition" requiredvars="CONTENT" -->
<div class="{STYLE}"><a class="close" data-dismiss="alert" href="#">&times;</a>{CONTENT}</div>
<!-- /patTemplate:tmpl -->
<div class="content-box">
<div class="pageBar">
    <div class="pageNav">
        <ul class="action-btn">
            <!-- patTemplate:tmpl name="button_add" visibility="hidden" -->
            <li>
                <a class="popup_setting btn-add" href="{URL}" title="<!-- patTemplate:gtfwgetlang key="add" / --> <!-- patTemplate:gtfwgetlang key="setting" / -->" tabindex="4"><!-- patTemplate:gtfwgetlang key="add" / --></a>
            </li>
            <!-- /patTemplate:tmpl -->
        </ul>
    </div>
    <div class="toolbar">
        <!-- patTemplate:gtfwrendermodule module="comp.paging" submodule="paging" action="view" name="paging_top"  / -->
    </div>
</div>
<table class="table-common">
<thead>
    <tr>
        <th style="width: 40px;"><!-- patTemplate:gtfwgetlang key="number"/ --></th>
        <th style="width: 105px;"><!-- patTemplate:gtfwgetlang key="action" / --></th>
        
        <th><!-- patTemplate:gtfwgetlang key="name"/ --></th>
        <th><!-- patTemplate:gtfwgetlang key="value"/ --></th>
        <th><!-- patTemplate:gtfwgetlang key="description"/ --></th>
    </tr>
</thead>
<tbody>
    <!-- patTemplate:tmpl name="data" type="condition" conditionvar="IS_EMPTY" -->
    <!-- patTemplate:sub condition="YES" -->
    <tr>
        <td colspan="5" style="text-align: center !important;">-- <!-- patTemplate:gtfwgetlang key="no_data" / --> --</td>
    </tr>
    <!-- /patTemplate:sub -->
    <!-- patTemplate:sub condition="NO" -->
    <!-- patTemplate:tmpl name="item" -->
    <tr class="{ROW_CLASS}">
        <td style="text-align: center;">{NO}</td>        
        <td class="links">
            <a class="popup_setting btn-detail" href="{URL_DETAIL}" title="<!-- patTemplate:gtfwgetlang key="detail" / -->"></a>
            <!-- patTemplate:tmpl name="button_update" visibility="hidden" -->
            <a class="popup_setting btn-edit" href="{URL}" title="<!-- patTemplate:gtfwgetlang key="edit" / --> Setting"></a>
            <!-- /patTemplate:tmpl -->
            <!-- patTemplate:tmpl name="button_delete" visibility="hidden" -->
            <a class="confirm_delete btn-delete-icon" href="{URL}" title="<!-- patTemplate:gtfwgetlang key="delete" / -->" data-name="{NAME}" ></a>
            <!-- /patTemplate:tmpl -->            
            </ul>
        </td>
        
        <td>{NAME}</td>
        <td>{VALUE}</td>
        <td>{DESC}</td>
    </tr>
    <!-- /patTemplate:tmpl -->
    <!-- /patTemplate:sub -->
    <!-- /patTemplate:tmpl -->
</tbody>
</table>
<div class="pageBar">
    <div class="toolbar">
        <!-- patTemplate:gtfwrendermodule module="comp.paging" submodule="paging" action="view" name="paging_bottom"  / -->
    </div>
</div>
</div>
<script type="text/javascript">
$(function(){
    $('.confirm_delete').on('click', function(event){
        var elm = $(this);
        var href = elm.attr('href');
        var name = elm.data('name');
        gtConfirm("<!-- patTemplate:gtfwgetlang key="msg_confirm_delete" / -->" + ' setting?<br/><strong>'+name+'</strong>',"<!-- patTemplate:gtfwgetlang key="title_confirm_delete" / -->" + ' Setting',function(status){
            if (status) {
                // $.post(href, function(data){
                //     $.globalEval("result = " + data + ";");
                //     if (result['exec']) {
                //         $.globalEval(result['exec'] + ";");
                //     }
                //   }
                // );
                replaceContentWithUrl('subcontent-element', href);
                // $.Gtfw.load(href);
            } else {
                return false;
            }
        });
        return false;
    })
});


    var popupSetting;
    $('.popup_setting').click(function(){
        var url = $(this).attr('href')+'&ascomponent=1';
        var title = $(this).attr('title');
    
        popupSetting = showGtPopup(url, title, 640, null, 320, true);
        return false;
    });
                                        
</script>
<!-- /patTemplate:tmpl -->