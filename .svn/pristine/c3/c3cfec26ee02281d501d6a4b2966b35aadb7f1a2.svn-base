        <td>{CODE}</td>
        <td>{NAME}</td>
        <td>{ICON_PATH}</td>
        <td>{DESCRIPTION}</td>
    </tr>
    <!-- /patTemplate:tmpl -->
    <!-- /patTemplate:sub -->
    <!-- /patTemplate:tmpl -->
