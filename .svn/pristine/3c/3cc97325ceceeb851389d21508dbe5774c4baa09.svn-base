<!-- patTemplate:tmpl name="content" -->
<!-- patTemplate:gtfwrendermodule module="comp.breadcrump" submodule="breadcrump" action="view" name="breadcrump" / -->
<!-- patTemplate:tmpl name="search" -->

<form id="form_search" class="xhr dest_subcontent-element dataquest" method="post" action="{URL}">
    <table>
        <tr>
            <th style="width: 20%;"><!-- patTemplate:gtfwgetlang key="name" / --></th>
            <td><input type="text" id="name" class="input-xlarge" name="name" value="{NAME}" size="50" title="<!-- patTemplate:gtfwgetlang key="name" / -->" tabindex="1" />&nbsp;<button type="submit" class="btn" title="<!-- patTemplate:gtfwgetlang key="search" / -->" tabindex="2"><!-- patTemplate:gtfwgetlang key="search" / --></button></td>
        </tr>
    </table>
</form>
<!-- /patTemplate:tmpl -->
<!-- patTemplate:tmpl name="message" type="simplecondition" requiredvars="CONTENT" -->
<div class="{STYLE}"><a class="close" data-dismiss="alert" href="#">&times;</a>{CONTENT}</div>
<!-- /patTemplate:tmpl -->
<div class="content-box">
    <div class="pageBar">
        <div class="pageNav">
            <!-- patTemplate:tmpl name="button_add" visibility="hidden" -->
            <a class="xhr dest_subcontent-element btn-add" href="{URL}" title="<!-- patTemplate:gtfwgetlang key="add" / --> <!-- patTemplate:gtfwgetlang key="group" / -->"><!-- patTemplate:gtfwgetlang key="add" / --></a>
            <!-- /patTemplate:tmpl -->
        </div>
        <div class="toolbar">
            <!-- patTemplate:gtfwrendermodule module="comp.paging" submodule="paging" action="view" name="paging_top"  / -->
        </div>
    </div>
    <table class="table-common">
        <thead>
            <tr>
                <th style="width: 40px;"><!-- patTemplate:gtfwgetlang key="number" / --></th>
                <th style="width: 85px;"><!-- patTemplate:gtfwgetlang key="action" / --></th>

                <th><!-- patTemplate:gtfwgetlang key="name" / --></th>
                <th><!-- patTemplate:gtfwgetlang key="desc" / --></th>
                <th><!-- patTemplate:gtfwgetlang key="application" / --></th>
            </tr>
        </thead>
        <tbody>
            <!-- patTemplate:tmpl name="data" type="condition" conditionvar="IS_EMPTY" -->
            <!-- patTemplate:sub condition="YES" -->
            <tr>
                <td colspan="5" style="text-align: center !important;">-- <!-- patTemplate:gtfwgetlang key="no_data" / --> --</td>
            </tr>
            <!-- /patTemplate:sub -->
            <!-- patTemplate:sub condition="NO" -->
            <!-- patTemplate:tmpl name="item" -->
            <tr class="{ROW_CLASS}">
                <td style="text-align: center;">{NO}</td>        
                <td class="links">
                    <a class="popup_groupall btn-detail" href="{URL_DETAIL}" title="<!-- patTemplate:gtfwgetlang key="detail" / --> <!-- patTemplate:gtfwgetlang key="group" / -->"></a>
                    <!-- patTemplate:tmpl name="button_update" visibility="hidden" -->
                    <a class="xhr dest_subcontent-element btn-edit" href="{URL}" title="<!-- patTemplate:gtfwgetlang key="edit" / --> <!-- patTemplate:gtfwgetlang key="group" / -->"></a>
                    <!-- /patTemplate:tmpl -->
                    <!-- patTemplate:tmpl name="button_delete" visibility="hidden" -->
                    <a class="confirm_delete btn-delete-icon" href="{URL}" title="<!-- patTemplate:gtfwgetlang key="delete" / -->" data-name="{NAME}" ></a>
                    <!-- /patTemplate:tmpl -->            
                    </ul>
                </td>

                <td>{NAME}</td>
                <td>{DESC}</td>
                <td>{APPLICATION_NAME}</td>
            </tr>
            <!-- /patTemplate:tmpl -->
            <!-- /patTemplate:sub -->
            <!-- /patTemplate:tmpl -->
        </tbody>
    </table>
    <div class="pageBar">
        <div class="toolbar">
            <!-- patTemplate:gtfwrendermodule module="comp.paging" submodule="paging" action="view" name="paging_bottom"  / -->
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function(){
        $('.confirm_delete').on('click', function(event){
            var elm = $(this);
            var href = elm.attr('href')+'&ascomponent=1';
            var name = elm.data('name');
            gtConfirm("<!-- patTemplate:gtfwgetlang key="msg_confirm_delete" / -->" + ' <!-- patTemplate:gtfwgetlang key="group" / -->?<br/><strong>'+name+'</strong>',"<!-- patTemplate:gtfwgetlang key="title_confirm_delete" / -->" + ' <!-- patTemplate:gtfwgetlang key="group" / -->',function(status){
                if (status) {
                    replaceContentWithUrl('subcontent-element', href);
                } else {
                    return false;
                }
            });
            return false;
        })
    });

    var popupGroupAll;
    $('.popup_groupall').click(function(){
        var url = $(this).attr('href')+'&ascomponent=1';
        var title = $(this).attr('title');
    
        popupGroupAll = showGtPopup(url, title, 850, null, 320, true);
        return false;
    });
</script>
<!-- /patTemplate:tmpl -->