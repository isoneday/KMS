    function delete($id)
    {
        $result = $this->ObjApplicantRanking->deleteApplicantRanking($id);
        if ($result) {
            $msg = GtfwLangText('msg_delete_success');
            $css = $this->cssDone;
        } else {
            $msg = GtfwLangText('msg_delete_fail');
            $css = $this->cssFail;            
